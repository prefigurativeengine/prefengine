    // SET CARGO_TARGET_DIR=C:\Users\HP\OneDrive\SAND\catalysis\catalysis\catalysis\targets\debug\32

    // SET CARGO_TARGET_DIR=C:\Users\HP\OneDrive\SAND\catalysis\catalysis\sandbox\targets\debug\32

    // cargo build -p catalysis

    "version": "2.0.0",
    "tasks": [
        {
            "label": "currentbuild",
            "dependsOn": [
                "win_build_cat",
                "cpylib"
            ],
            "group": "build",
            "dependsOrder": "sequence"
        },

        {
            "label": "win_build_cat",
            "type": "shell",
            "command": ".\\win_build_cargo32.bat",
            "args": [
                "catalysis",
            ],
            "presentation":{
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "cpylib",
            "type": "shell",
            "command": "copy",
            "args": [
                "${workspaceRoot}/catalysis/target/32/debug/catalysis.*",
                "${workspaceRoot}/sandbox/target/32/debug",
            ],
            "presentation": {
            },
        }
    ]
}